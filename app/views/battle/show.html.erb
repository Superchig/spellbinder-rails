<h1>Current Battles</h1>

<table class="table table-striped table-bordered w-50">
  <thead class="table-light">
    <tr>
      <th scope="col">Opponent</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.battles.each do |battle| %>
      <% opponent = battle.users.reject{ |user| user == current_user }.first %>
      <tr>
        <td><%= opponent.email %></td>
        <td>
          <%= link_to "Resume", "", class: "btn btn-sm btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>