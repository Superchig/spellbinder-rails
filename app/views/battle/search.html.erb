<h1>Begin Battle</h1>

<table class="table table-striped table-bordered w-50">
  <thead class="table-light">
    <tr>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% unless current_user == user %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to "Challenge To Battle.", "#{invitation_new_path(user.id)}", class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
